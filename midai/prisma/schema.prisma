generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Album {
  id          Int      @id @default(autoincrement())
  title       String
  artist      String
  releaseDate String?
  genre       String?
  length      String?
  label       String?
  tag         String?
  comment     String?
  coverUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([artist, title])
  @@index([genre])
}
