# ==========================================
# 环境模式配置
# ==========================================
# development = 开发模式（免登录，自动使用默认用户）
# production = 生产模式（强制 OAuth 登录）
NODE_ENV="development"

# 开发环境自动登录（仅在 NODE_ENV=development 时生效）
# true = 开发时自动使用默认用户，无需登录
# false = 开发时也需要登录（测试登录流程）
DEV_AUTO_LOGIN="true"

# ==========================================
# 数据库
# ==========================================
DATABASE_URL="file:./dev.db"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Google OAuth
# 获取地址: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Microsoft OAuth
# 获取地址: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps/ApplicationsListBlade
MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"
MICROSOFT_TENANT_ID="common"

# 微信 OAuth (需要申请微信开放平台)
# WECHAT_CLIENT_ID="your-wechat-appid"
# WECHAT_CLIENT_SECRET="your-wechat-secret"

# QQ OAuth (需要申请 QQ 互联)
# QQ_CLIENT_ID="your-qq-appid"
# QQ_CLIENT_SECRET="your-qq-appkey"

# Spotify API (用于获取歌曲流派信息)
# 获取地址: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID="your-spotify-client-id"
SPOTIFY_CLIENT_SECRET="your-spotify-client-secret"

# MusicBrainz API (用于获取歌曲流派信息，无需密钥但需要设置应用信息)
# 文档: https://musicbrainz.org/doc/MusicBrainz_API
MUSICBRAINZ_APP_NAME="YourAppName"
MUSICBRAINZ_APP_VERSION="1.0.0"
MUSICBRAINZ_CONTACT="your@email.com"
